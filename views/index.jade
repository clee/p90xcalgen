doctype html
html.no-js(lang='en')
  head
    title= title
    meta(name='viewport', content='width=device-width,initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/ui-darkness/jquery-ui-1.11.4.min.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui-timepicker-0.3.3.css')
    script(src='/javascripts/jquery-2.2.1.min.js')
    script(src='/javascripts/jquery-ui-1.11.4.custom.min.js')
    script(src='/javascripts/jquery-ui-timepicker-0.3.3.js')
    script(src='/javascripts/script.js')
  body
    div#container
      div#main(role='main')
        form(method="POST", action="/generate", enctype="application/x-www-form-urlencoded")
          fieldset
            legend P90X Calendar Generator
            ul
              li
                label(for='datepicker') Start date
                input#datepicker(required, name="date")
              li
                label(for='timepicker') Start time
                input#timepicker(required, name="time")
              li
                label(for='workout') Workout
                select#workout(name="workout")
                  - workouts.forEach(function(workout, index) {
                      option(value=index)= workout
                  - });
              li
                input(type='submit', value='Generate calendar')
